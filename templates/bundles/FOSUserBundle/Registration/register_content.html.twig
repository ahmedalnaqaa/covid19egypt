{% trans_default_domain 'FOSUserBundle' %}

{% extends 'base.html.twig' %}

{% block title %}
    قم بإنشاء حسابك
     |
    {{ parent() }}
{% endblock %}

{% block header %}
    <h1 class="display-5">تسجيل</h1>
    <p class="lead">قم بعمل حساب لتبدأ في التواصل معنا</p>
{% endblock %}

{% block body %}
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'mr-md-5 mr-5 pr-5 fos_user_registration_register'}}) }}
    {{ form_row(form.fullName) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_widget(form.test, {'value' : app.request.get('tid')}) }}
    {{ form_widget(form.type, {'value' : app.request.get('type')}) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

{% endblock %}