    {% block navbar%}
        <div class="d-flex flex-column flex-md-row align-items-center p-1 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }}
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ path('fos_user_profile_show') }}">الصفحة الشخصية</a>
                        <a class="dropdown-item" href="{{ path('fos_user_profile_edit') }}">الإعدادات</a>
                        <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">خروج</a>
                    </div>
                </div>
            {% endif %}
            <nav class="my-2 my-md-0 mr-md-3">
                {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a class="btn btn-outline-primary" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    <a class="btn btn-outline-primary" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
                <a class="p-2 text-dark" href="{{path('corona-test')}}"><span class="p-3 badge badge-warning">إختبر نفسك</span></a>
                <a class="p-2 text-dark" href="{{path('questions')}}">أسئلة عن فيرس كورونا</a>
                <a class="p-2 text-dark" href="{{path('advices')}}">نصائح هامة</a>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a class="p-2 text-dark" href="{{path('user-tests')}}">نتائج إختباراتي</a>
                {% endif %}
            </nav>

            <h2 class="my-0 ml-md-auto font-weight-normal"><a href="{{path('index')}}"><span class="badge badge-danger">كوڤيد-19 مصر</span>
                </a>
            </h2>
        </div>
